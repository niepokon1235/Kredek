@model ContactFormViewModel

    <h2>Kolor, który wybrałeś - @ViewBag.Color, rozmiar - @ViewBag.Size.</h2>
<!--Formularz kontaktowy-->
@using (Html.BeginForm("Basket", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal distance-top">
    <h4>Formularz kontaktowy</h4>
    <hr />
    <!--Imię-->
    <div class="form-group">
        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <!--Nazwisko-->
    <div class="form-group">
        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <!--Ulica-->
    <div class="form-group">
        @Html.LabelFor(model => model.Street, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Street, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <!--Miejscowość-->
    <div class="form-group">
        @Html.LabelFor(model => model.Locality, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Locality, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <!--Email-->
    <div class="form-group">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <!--Numer telefonu-->
    <div class="form-group">
        @Html.LabelFor(model => model.TelefonNumber, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TelefonNumber, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <!--Przycisk potwierdzenia zakupów-->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Zatwierdź zakup" class="btn btn-success" />
        </div>
    </div>
</div>
}